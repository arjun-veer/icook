{
  "expo": {
    "name": "iCook",
    "slug": "icook",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.svg",
    "userInterfaceStyle": "dark",
    "scheme": "icook",
    "splash": {
      "image": "./assets/splash.svg",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.icook.app",
      "jsEngine": "hermes",
      "infoPlist": {
        "NSCameraUsageDescription": "iCook needs camera access to capture your cooked dishes",
        "NSPhotoLibraryUsageDescription": "iCook needs photo library access to save and share your recipes",
        "NSMicrophoneUsageDescription": "iCook needs microphone access for voice commands in cook mode"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.svg",
        "backgroundColor": "#000000"
      },
      "package": "com.icook.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "jsEngine": "hermes"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow iCook to access your camera to capture cooked dishes"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow iCook to access your photos to share recipes"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "icook-app"
      }
    }
  }
}
